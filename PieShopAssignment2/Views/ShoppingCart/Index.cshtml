@model ShoppingCartViewModel<h2><center>Your shopping cart</center></h2><h4><center>Here are the delicious pies in your shopping cart.</center></h4><body background style="background-color:tan"><table class="table table-bordered table-striped">    <thead>    <tr>        <th>Select Quantity</th>        <th>Pie</th>        <th class="text-right">Price</th>        <th class="text-right">Subtotal</th>        <th>Remove Pie</th>    </tr>    </thead>    <tbody>    @foreach (var line in Model.ShoppingCart.ShoppingCartItems)    {        <tr>            <td class="text-center"><a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-pieId="@line.Pie.PieId"><button>-</button></a> @line.Amount <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pieId="@line.Pie.PieId"><button>+</button></a></td>            <td class="text-left">@line.Pie.Name</td>            <td class="text-right">@line.Pie.Price.ToString("c")</td>            <td class="text-right">                @((line.Amount * line.Pie.Price).ToString("c"))            </td>            <td class="text-center"> <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-pieId="@line.Pie.PieId">Remove</a>        </tr>    }    </tbody>    <tfoot>    <tr>        <td colspan="3" class="text-right">Total:</td>        <td class="text-right">            @Model.ShoppingCartTotal.ToString("c")        </td>    </tr>    </tfoot></table>

<div class="text-center">     <a class="btn btn-primary" asp-controller="Pie" asp-action="List">Back to List</a>    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Check out now!</a>    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="ClearCart">Clear Cart</a></div>
</body>