@using PieShopAssignment2.ViewModels

@model PieListViewModel;

<center><h1>All The Pies</h1></center>
<body background style="background-color:tan">
 <div class="row">
@foreach(var pie in Model.Pies)
   {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src="@pie.ImageThumbnailUrl" alt="">
                <div class="caption">
                     <h3 class="pull-right">@pie.Price.ToString("c")</h3>
                       <h3>
                            <a asp-controller="Pie" asp-action="details" asp-route-id="@pie.PieId">@pie.Name</a>
                    </h3>
                     <p>@pie.ShortDescription</p>
                     <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pieId="@pie.PieId"class="btn btn-primary"> Add To Cart </a>
                     <a asp-controller="Pie" asp-action="Delete" asp-route-id="@pie.PieId"class="btn btn-primary"> Delete </a>
                      <a asp-controller="Pie" asp-action="Edit" asp-route-id="@pie.PieId"class="btn btn-primary"> Edit </a>

                </div>
            </div>   
      </div>
   }
   </div>
   </body>